<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:padding="16dp"
    android:backgroundTint="@color/darker_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="7dp">

        <TextView
            tools:text="USD"
            android:id="@+id/tv_acronym_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/coolvetica_regular"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            tools:text="American Dollar"
            android:id="@+id/tv_currency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_weight="1"
            android:fontFamily="@font/coolvetica_regular"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_currency_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/coolvetica_regular"
            android:textAlignment="textStart"
            android:layout_marginStart="30dp"
            android:textColor="@color/darker_green"
            android:textSize="20sp"
            tools:text="$0.20" />

    </LinearLayout>

</androidx.cardview.widget.CardView>